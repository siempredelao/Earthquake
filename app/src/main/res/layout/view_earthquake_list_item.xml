<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/earthquake_list_item_view_place_textview"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4km ESE of Newport Beach, CA"/>

    <TextView
        android:id="@+id/earthquake_list_item_view_magnitude_textview"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/earthquake_list_item_view_place_textview"
        android:layout_marginTop="8dp"
        tools:text="1.56 ml"/>

    <TextView
        android:id="@+id/earthquake_list_item_view_timestamp_textview"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/earthquake_list_item_view_magnitude_textview"
        android:textStyle="italic"
        tools:text="43 minutes ago"/>

</RelativeLayout>